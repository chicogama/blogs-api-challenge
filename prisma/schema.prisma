// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
    id Int      @id @default(autoincrement())
    displayName String
    email String    @unique
    password String 
    image String
    BlogPst BlogPst[]

    @@map("users")
}

model Category {
    id Int  @id
    name String

    @@map("categories")
}

model PostCategory{
    postId Int  @id   
    name String

    @@map("post_categories")
}

model BlogPst{
    id Int @id
    title String
    content String
    user User @relation(fields: [userId], references: [id]) 
    userId Int
    published DateTime @default(now())
    updated DateTime @updatedAt

    @@map("blog_posts")
}